@page 
@model IndexModel
@{
    ViewData["Title"] = "sigup page";
}
<link rel="stylesheet" href="~/css/site.css" />
    <div class="img-container">
        <img class="f-img" src="./static/img/world.png" alt="" />
    </div>
    <form id="submit">
        <h3 class="form-head">!ساخت حساب کاربری جدید</h3>
        <p class="error" id="error"></p>
        <div class="group">
            <input id="name" name="name" type="text" class="input" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">نام</label>
        </div>
        <div class="group">
            <input id="family" name="family" type="text" class="input" /> 
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">نام خانوادگی</label>
        </div>
        <div class="group">
            <input id="userName" name="userName" type="text" class="input" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">نام کاربری</label>
        </div>
        <div class="group">
            <input id="password" name="password" type="password" class="input" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">کلمه عبور</label>
        </div>
        <div class="group">
            <input id="email" name="email" type="email" class="input" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">ایمیل</label>
        </div>
        <div class="group">
            <input id="phone" name="phone" type="number" class="input" />
            <span class="highlight"></span>
            <span class="bar"></span>
            <label class="dir" for="name">شماره تماس</label>
        </div>
        <div class="btn-container">
            <button class="log-in">ثبت نام</button>
        </div>
        <div class="btn-container">
            <p><div class="line"></div> حساب کاربری دارید ؟<div class="line"></div></p>
        </div>
        <div class="btn-container">
            <a class="log-in" href="./" target="_self">
                <p> ورود به حساب کاربری </p>
            </a>
        </div>
    </form>
    <div class="seid-section">
        <img src="" alt="" />
    </div>
    <script src="~/js/site.js"></script>
